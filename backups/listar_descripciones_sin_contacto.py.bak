def obtener_descripciones_sin_contacto(conn):
    """
    Obtiene todas las descripciones √∫nicas de movimientos
    que no est√°n en la tabla contacts.
    
    Returns:
        list: Lista de diccionarios con contact y reference
    """
    cursor = conn.cursor()
    
    # Query para obtener descripciones que no est√°n en contactos
    # Agrupamos por descripci√≥n y tomamos una referencia de ejemplo
    query = """
        SELECT DISTINCT
            m.Descripcion as contact,
            MIN(m.Referencia) as reference,
            COUNT(*) as cantidad_movimientos,
            MIN(m.Fecha) as primera_fecha,
            MAX(m.Fecha) as ultima_fecha
        FROM movimientos m
        LEFT JOIN contactos c ON LOWER(TRIM(m.Descripcion)) = LOWER(TRIM(c.contacto))
        WHERE c.contactoid IS NULL
        GROUP BY m.Descripcion
        ORDER BY cantidad_movimientos DESC, m.Descripcion
    """
    
    cursor.execute(query)
    resultados = cursor.fetchall()
    cursor.close()
    
    # Convertir a lista de diccionarios
    descripciones = []
    for row in resultados:
        descripciones.append({
            'contact': row[0],
            'reference': row[1] if row[1] else '',
            'cantidad_movimientos': row[2],
            'primera_fecha': row[3],
            'ultima_fecha': row[4]
        })
    
    return descripciones

def generar_reporte_csv(descripciones, filename='descripciones_sin_contacto.csv'):
    """
    Genera un archivo CSV con el reporte.
    
    Args:
